<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @test.name %>
</p>


<%= form_tag "/take_tests/check", methods: :post do %>




<ol>

  <% for question in @test.questions.each %>
  <li><%= h question.content %></li>
  <ul>
    <% for answer in question.answers.each %>
      <li><%= radio_button_tag "#{question.id}]", "#{answer.id}" %><%= h answer.content %></li>
    <% end %>
  </ul>
  <% end %>
</ol>


<%= submit_tag "Submit" %>

<% end -%>

